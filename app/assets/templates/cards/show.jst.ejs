<div class="card-title">
	<%= card.escape('title') %>
	<!-- <button id="<%= card.id %>" type="button" class='close hidden float-right-button'>x</button> -->
	<span class="glyphicon glyphicon-remove close hidden float-right-button" id="<%= card.escape('id') %>"></span>
