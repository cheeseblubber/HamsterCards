	<div class="modal fade" id="cardDetails">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h4 class="modal-title"><%= card.escape("title") %> in <%= list.escape('title') %></h4>
	      </div>
	      <div class="show-comment-form modal-body">
					<% var description = card.escape("description") %>
					<% if(description === null || description.length === 0) { %>
						<a class="hide-on-edit show-form">
							<span class="glyphicon glyphicon-pencil"></span>
							Edit the description
						</a>
					<% }  else  {  %>
						Description
						<a class="hide-on-edit show-comment-form">Edit
	        		<p><%= card.escape("description") %></p>
						</a>
				<% } %>
				<form class="description panel hideable hidden">
						<textarea class="title" autofocus="autofocus"></textarea>
					<input type="submit" class="btn btn-success add" value="Save">
				</form>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        <button type="button" class="btn btn-primary">Save changes</button>
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div>