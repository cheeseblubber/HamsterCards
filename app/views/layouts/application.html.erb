<!DOCTYPE html>
<html>
<head>
  <title>HamsterCards</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<%= favicon_link_tag 'favicon.ico'%>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
				<a href="#">
					<div class="logo" ><%= image_tag("hamsterlogo.png")%></div>
				</a>
        <a class="navbar-brand" href="#">Trellino</a>
      </div>

      <ul class="nav navbar-right nav-pills">
        <li>
          <% if logged_in? %>
					<li>
				      <button class="btn trello-button-format" data-toggle="modal" data-target="#add-member">
				        Add member
				      </button>

				</li>
					<li>
            <%= button_to "Log out", session_url, { method: :delete, class: "btn trello-button-format" } %>
					</li>

					<% else  %>
						<% link_to new_session_url %>


          <% end %>
        </li>

      </ul>
    </div>
  </nav>


  <%= yield %>
				    <div class="modal fade" id="add-member" tableindex="-1" role="dialog" aria-labelleby="myModalLabel" aria-hidden="true">
				      <div class="modal-dialog">
				        <div class="modal-content">
				          <div class="modal-header">
				          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				          <h4 class="modal-title" id="myModalLabel">Add Member</h4>
				            <div class="modal-body">
				              <form class="add-member trello-button-format">
				                <label>Enter the member's Email
				                  <input type="text" name="newMemberEmail">
				                </label>
				                  <br>
				                  <input class='btn' type='Submit' >
				                </form>
				              </div>
				            </div>
				          <div>
				        </div>
				      </div>
				    </div>
				  </div>
</body>
</html>
